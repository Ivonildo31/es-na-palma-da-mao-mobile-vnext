{
    "name": "espm",
    "version": "0.0.1",
    "displayName": "ES na Palma da Mão",
    "description": "O ES NA PALMA DA MÃO é um programa do Governo do Estado do Espírito Santo que reúne iniciativas e serviços do Governo em plataforma móvel (aplicativo) e web, com unidade de experiência do cidadão. Por meio do ES NA PALMA DA MÃO, diversos serviços governamentais podem ser acessados através da web e dispositivos móveis (sistemas operacionais iOS e Android) utilizando uma interface comum.",
    "private": true,
    "scripts": {
        "ngc": "ngc",
        "serve": "lite-server --baseDir=\"www\"",
        "clean": "ionic-app-scripts clean",
        "build": "ionic-app-scripts build",
        "lint": "ionic-app-scripts lint",
        "ionic:build": "ionic-app-scripts build",
        "ionic:build:prod": "ionic-app-scripts build --prod",
        "ionic:serve": "ionic-app-scripts serve",
        "htmlhint": "htmlhint --config .htmlhintrc",
        "precommit": "lint-staged",
        "prettier": "prettier --print-width 120 --no-semi --single-quote --write",
        "tsfmt": "tsfmt --no-tslint --no-vscode --no-editorconfig --verbose -r",
        "tsfmt-verify": "tsfmt --verify",
        "workbox-cli": "workbox-cli",
        "github:release": "sh ./release.sh",
        "commit": "git-cz",
        "commitmsg": "validate-commit-msg"
    },
    "lint-staged": {
        "src/app/**/*.html": [
            "htmlhint"
        ],
        "src/**/*.ts": [
            "lint",
            "prettier",
            "tsfmt",
            "git add"
        ],
        "src/**/*.{css,scss}": [
            "prettier",
            "git add"
        ]
    },
    "config": {
        "ionic_app_ng_module_class": "EspmModule",
        "ionic_app_entry_point": "src/main.ts",
        "ionic_webpack": "./webpack.config.js",
        "commitizen": {
            "path": "node_modules/cz-conventional-changelog"
        },
        "validate-commit-msg": {
            "types": "conventional-commit-types",
            "helpMessage": "Use \"yarn commit\" instead, we use conventional-changelog format :) (https://github.com/commitizen/cz-cli)"
        }
    },
    "dependencies": {
